            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success text-white" type="submit" style="color:black">Search</button>
          </form>
        </div>   
      </div>
          
      <span style="padding-right: 1%; padding-top: 0.5%;"><h5> <%= user.firstname %> </h5></span>
