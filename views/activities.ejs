    <script>
        function store() {
            var name = document.getElementById("playerName").value;
            if (name === "")
                alert("Please enter your Name and Click Save");
            localStorage.setItem("player", name);
            document.getElementById("playerName").placeholder = name;
            event.preventDefault();
        }



    </script>


